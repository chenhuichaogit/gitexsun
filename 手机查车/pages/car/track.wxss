map {
  width: 100%;
  height: calc(100% - 189px);
}

.layout-tips-box {
  /* background-color: #fff; */
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
  padding: 1px 10px;
  width: calc(100% - 20px);
  margin-bottom: 5px;
  height: 120px;
  overflow: hidden;
}

.layout-tips-box .section {
  clear: both;
  padding: 0 10px;
  position: relative;
  display: flex;
  margin: 0;
  font-size: 13px;
}

.layout-tips-box .section > view {
  /* white-space: nowrap; */
  line-height: 24px;
}

.layout-tips-box .section > view:first-child {
  width: 20%;
  text-align: right;
  font-weight: 700;
}

.layout-tips-box .section > view:last-child {
  width: calc(80% - 5px);
  padding-left: 5px;
  max-height: 44px;
  overflow: hidden;
  text-overflow: ellipsis;
}

.control-panel {
  height: 64px;
  background-color: #eeeff4;
  box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.05);
  margin-top: 5px;
  display: flex;
}

.control-panel .control {
  width: 64px;
}

.control-panel .control image {
  width: 44px;
  height: 44px;
  margin: 5px;
}

.control-panel .track {
  width: calc(80% - 64px);
  position: relative;
}

.control-panel .track .track-bg {
  height: 6px;
  border-radius: 3px;
  background-color: #d6d8dd;
  width: 100%;
  position: absolute;
  top: 26px;
  left: 0;
  z-index: 100;
}

.control-panel .track .track-bar {
  height: 6px;
  border-radius: 3px;
  background-color: #2ea2fd;
  width: 0;
  position: absolute;
  top: 26px;
  left: 0;
  z-index: 1000;
}

.control-panel .info {
  padding: 0 10px;
}

.control-panel .info .mileage {
  line-height: 1.2;
}

.control-panel .info .mileage >span {
  font-size: 24px;
  font-weight: 700;
}
