map {
  width: 100%;
  height: calc(100% - 179px);
}

.layout-tips-box {
  height: 130px;
  background-color: #f8f8f8;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
  border-bottom: 1px solid #dfdfdf;
}

.layout-tips-box  .list {
  float: left;
  width: 27.3333333333%;
  height: 35px;
  padding: 10px 3%;
  line-height: 17.5px;
}

.layout-tips-box  .icon {
  width: 13px;
  height: 22px;
  float: left;
  margin-right: 10px;
}

.layout-tips-box  .icon2 {
  width: 14px;
  height: 14px;
  float: left;
  margin-right: 10px;
}

.layout-tips-box .number {
  font-size: 32rpx;
  font-weight: 700;
  white-space: nowrap;
  float: left;
  margin-right: 8rpx;
  padding: 0 5rpx;
}

.layout-tips-box .green {
  color: #17c97b;
}

.layout-tips-box .red {
  color: #fc6b6b;
}

.layout-tips-box .gray {
  color: #acb0ba;
}

.layout-tips-box .blue {
  color: #3179e2;
}

.layout-tips-box .page-section {
  clear: both;
  padding: 3px 10px;
  width: calc(100% - 20px);
  position: relative;
  border-top: 1px solid #dfdfdf;
  display: inline-block;
  margin: 0;
  line-height: 1.5;
}

.layout-tips-box .page-section::after {
  clear: both;
  content: '';
}

.layout-tips-box .vehicleNo {
  font-size: 15px;
  font-weight: 700;
  float: left;
}

.layout-tips-box .timer {
  font-size: 12px;
  color: #999;
  float: right;
}

.layout-tips-box  .p {
  width: 100%;
  display: inline-block;
  line-height: 1.2;
  max-height: 35px;
  overflow: hidden;
  text-overflow: ellipsis;
}

.detail-tab {
  width: 100%;
  height: 44px;
  line-height: 44px;
  background-color: #fff;
  display: flex;
}

.detail-tab > view {
  flex: 1;
  text-align: center;
}

.layout-tips-box .speed {
  position: absolute;
  right: 15px;
  top: 5px;
}

.layout-tips-box .speed > text {
  font-size: 24px;
  font-weight: 600;
}
